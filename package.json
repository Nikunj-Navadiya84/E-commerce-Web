{
  "name": "web-food-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "admin",
    "client",
    "server"
  ],
  "scripts": {
    "admin": "npm run dev --workspace=admin",
    "client": "npm run dev --workspace=client",
    "server": "npm run dev --workspace=server",
    "dev": "concurrently \"npm run admin\" \"npm run client\" \"npm run server\"",
    "install:all": "npm install",
    "build:all": "npm run build --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 